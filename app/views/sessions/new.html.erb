<div class="logo-wrapper">
  <span>Friend Quiz</span>
</div>
<div class="login-wrapper">
  <%= form_with(url: login_path) do |f| %>
    <div class="login-row">
    <%= f.label :id, "id" %><br>
    <%= f.text_field :id %>
    </div>
    <div class="login-row">
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password %>
    </div>
    <div class="login-button">
    <%= f.submit "サインイン" %>
    </div>
  <% end %>
</div>
<div class="info-wrapper">
  <span>※idとパスワードは席次表を御覧ください</span>
</div>